    <div class="card-custon mt-5 card">
        <div class="card-header">
            <h2 class="text-primary">Soumission dossier formation</h2>
            <!-- @todo indicate result scraping -->
            <table class="table-hover table ">
                <tbody>
                {% for label, value in scraping.statutDossier %}
                <tr>
                    <td><b>{{ value.name }}</b> : <span class="{{ value.statut|colorizeStatut }}">{{ value.statut }}</span></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
